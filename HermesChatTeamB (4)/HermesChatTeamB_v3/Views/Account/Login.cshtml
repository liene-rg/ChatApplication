<!DOCTYPE html>
<html lang="en">
@model HermesChatTeamB_v3.ViewFolder.LoginViewModel


<head>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/login.css" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
	<div class="wrapper">
		<h2 class="title">Welcome to Hermes Chat</h2>

		<form method="post" asp-controller="Account" asp-action="Login"
			asp-route-returnUrl="@Model.ReturnUrl">
			<div class="inputgroup">
				<div asp-validation-summary="All" class="text-danger"></div>
				@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
				<label for="email">
					<i class="fa fa-envelope" i style="color: darkblue; font-size: 15px;margin-top: 5px;"></i>
				</label><br />
					<input type="email" class="form-control" name="email" id="email" placeholder="e-mail"
					asp-for="Email" /><br />
					<span asp-validation-for="Email"></span>
					<label for="password">
						<i class="fa fa-unlock-alt" i style="color: darkblue; font-size: 20px; padding-top: 25px;"></i>
					</label><br />
						<input type="password" class="form-control" value="" name="password" id="Input" placeholder="password"
						asp-for="Password" />
						<span asp-validation-for="Password"></span>
						<div class="click" style="padding-top:10px"></div>
						<input type="checkbox" onclick="myFunction()" /> Show Password
						<button class="login" type="submit" value="Login">Sign In</button>
						<div class="support row">
							@*<input asp-for="RememberMe" />
							<label asp-for="RememberMe" style="padding-right: 60px;"></label>
							<span asp-validation-for = "RememberMe"></span> *@
							<input class="forgotPassword" asp-controller="Account" asp-action="ForgotPassword"
							ForgotPassword type="submit" value="Forgot Password?"/><br/>
							<label for="submit" style="padding-left: 5px;"> Haven`t registered yet? Click </label>
							<input  class="register" asp-controller="Account" asp-action="Register" type="submit" value="here."/>
						</div>
						@*<a href="#" class="fb btn" style="padding-top: 15px; padding-bottom: 40px;">
							<i class="fa fa-facebook fa-fw"></i> Login with Facebook
						</a>	*@		
			</div>
		</form>
	</div>
</body>
</html>


@if (User.Identity.IsAuthenticated)
{
